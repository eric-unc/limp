// Core
program = { SOI ~ expr_list ~ EOI }
expr_list = { expr+ }
expr = { atom | invocation }
atom = { name | float | int }
invocation = { "(" ~ expr_list ~ ")" }

// Atoms
int = @{ ("+" | "-")? ~ ASCII_DIGIT+ }
float = @{ ("+" | "-")? ~ ASCII_DIGIT+ ~ "." ~ ASCII_DIGIT+ }
name = { "+" | "-" | "*" | "/" | "print" }

WHITESPACE = _{ " " | "\t" }
